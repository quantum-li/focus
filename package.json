{
    "name": "focus",
    "displayName": "Focus",
    "description": "Help you focus on the code you are editing by highlighting relevant sections.",
    "version": "0.4.0",
    "publisher": "QuanLi",
    "author": {
        "name": "Quan Li"
    },
    "icon":"images/logo.png",
    "license": "SEE LICENSE IN LICENSE",
    "engines": {
        "vscode": "^1.35.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "keywords": [
        "javascript",
        "python",
        "java",
        "c/c++",
        "multi-root ready"
    ],
    "bugs": {
        "url":"https://github.com/quantum-li/focus/issues",
        "email": "lee@leezw.net"
    },
    "homepage": "https://github.com/quantum-li/focus/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/quantum-li/focus.git"
    },
    "main": "./extension.js",
    "contributes": {
        "commands":[
            {
                "command": "focus.switchToBlockLevel",
                "title": "Focus: Switch To Block Level"
            },
            {
                "command": "focus.switchToFixedLevel",
                "title": "Focus: Switch To Fixed Level"
            },
            {
                "command": "focus.turnOff",
                "title": "Focus: Turn Off"
            }
        ],
        "keybindings":[
        ],
        "configuration":[
            {
                "title": "Focus",
                "properties": {
                    "focus.opacity":{
                        "type":"string",
                        "default":"0.7",
                        "pattern": "^0\\.\\d{1}$",
                        "description": "Opacity of the out-of-focus lines"
                    },
                    "focus.highlightRange":{
                        "type":"string",
                        "default":"block",
                        "enum": [
                            "block",
                            "fixed",
                            "none"
                        ],
                        "description": "Highlight range",
                        "markdownEnumDescriptions": [
                            "Highlight code block within braces",
                            "Fixed highlight of `#focus.highlightLines#` lines",
                            "Do not highlight any code"
                        ]
                    },
                    "focus.highlightLines":{
                        "type":"integer",
                        "default":5,
                        "minimum": 1,
                        "markdownDescription":"This configuration is only useful when `#focus.highlightRange#` is set to *fixed*. This means how many lines will be highlighted."
                    },
                    "focus.autoMatchLevel":{
                        "type":"integer",
                        "default":-1,
                        "markdownDescription":"Auto match level for block modes. Positive numbers (1,2,3...) search from outermost to inner, negative numbers (-1,-2,-3...) search from cursor position outward."
                    }
                }
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.35.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}
